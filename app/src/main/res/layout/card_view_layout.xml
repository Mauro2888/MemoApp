<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="2dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:layout_height="@dimen/cardHeight">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/colorBarMain"
                android:background="@color/colorDateBar"
                android:layout_gravity="bottom"
                android:layout_width="10dp"
                android:layout_height="150dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/colorBarMain2"
            android:background="@color/colorDateBar"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
        <TextView
            android:textColor="@color/colorTextDate"
            android:paddingRight="@dimen/TextSpace"
            android:textAlignment="textEnd"
            android:gravity="end"
            android:textSize="@dimen/dateBoxText"
            android:hint="date"
            android:textStyle="italic"
            android:id="@+id/timebox"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="20sp" />
        <LinearLayout
            android:layout_marginLeft="@dimen/TextSpace"
            android:id="@+id/layout"
            android:orientation="vertical"
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="@dimen/paddingLeft"
                android:inputType="textCapSentences"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:id="@+id/noteTitle"
                tools:text="@string/ins_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="@dimen/TextSpace"
                android:inputType="textCapSentences"
                android:id="@+id/noteText"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/ins_note" />
        </LinearLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>