<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="app.memo.com.memoapp.UI.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/colorSelected"
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/textView"
            style="@style/TextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="@string/change_color" />

        <ImageButton
            android:id="@+id/pickerColor"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_color_palette" />

    </LinearLayout>

    <EditText
        android:id="@+id/ins_title_detail"
        style="@style/EditTextStyleNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ins_title"
        android:inputType="textCapSentences|textMultiLine" />

    <EditText
        android:id="@+id/ins_nota_detail"
        style="@style/EditTextStyleNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:background="@null"
        android:hint="@string/ins_note"
        android:inputType="textCapSentences|textMultiLine"
        android:isScrollContainer="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/last_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:inputType="textCapSentences"
            android:textAlignment="viewEnd"
            android:textSize="@dimen/lastEdit"
            android:textStyle="italic"
            tools:ignore="RtlCompat"
            tools:text="last edit" />
    </RelativeLayout>





</LinearLayout>
