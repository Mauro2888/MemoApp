<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_popwindow"
    android:orientation="vertical"
    android:padding="15dp">


    <TextView
        style="@style/ColorDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_color_lens_dialog"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="@string/choose_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/btnBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/shape_color"
            android:backgroundTint="@color/materialBlue" />

        <ImageView
            android:id="@+id/btnGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/shape_color"
            android:backgroundTint="@color/materialGreen" />

        <ImageView
            android:id="@+id/btnOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/shape_color"
            android:backgroundTint="@color/materialOrange" />

        <ImageView
            android:id="@+id/btnIndigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/shape_color"
            android:backgroundTint="@color/materialIndigo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnPink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/shape_color"
            android:backgroundTint="@color/materialPink" />

        <ImageView
            android:id="@+id/btnGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/shape_color"
            android:backgroundTint="@color/materialDarkPink" />

        <ImageView
            android:id="@+id/btnRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/shape_color"
            android:backgroundTint="@color/materialRed" />

        <ImageView
            android:id="@+id/btnLightGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/shape_color"
            android:backgroundTint="@color/materialLightGreen" />

    </LinearLayout>


</LinearLayout>